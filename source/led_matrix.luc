module led_matrix #(
        ROWS = 11 : ROWS > 0,
        COLUMNS = 5 : COLUMNS > 0
    )(
        input clk,  // clock
        input rst,  // reset
        input colors[ROWS][COLUMNS * 24],
        output led_data[ROWS]
    ) {
    
    .clk(clk), .rst(rst) {
        led_lib lib[ROWS](#SIZE(COLUMNS));
    }

    always {
        lib.colors = colors;
        led_data = lib.dataOut;
    }
}
